<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_banner_types"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_success"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_info"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_warning"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_error"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_duration"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAutoDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_auto_dismiss"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_customization"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCustomColors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_custom_colors"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWithClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_with_click"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_vibration"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVibrateShort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_vibrate_short"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVibrateMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_vibrate_medium"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVibrateLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_vibrate_long"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_singleton"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRapidBanners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_rapid_banners"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_enhanced_layout"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWithTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_with_title"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWithLeftImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_with_left_image"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWithRightImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_with_right_image"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWithCustomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_with_custom_view"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_expandable"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExpandableBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_expandable_banner"
            android:layout_marginBottom="8dp" />

        <!-- Pending Banner Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PENDING BANNER (CROSS-ACTIVITY)"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScheduleAndNavigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Banner &amp; Navigate"
            android:layout_marginBottom="8dp"
            app:icon="@android:drawable/ic_menu_send" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Pending Banner"
            android:layout_marginBottom="16dp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel" />

        <!-- Debug Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEBUG"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDebugLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug Layout (Colored Sections)"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>
