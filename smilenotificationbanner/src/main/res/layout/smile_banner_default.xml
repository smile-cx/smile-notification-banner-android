<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bannerCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/smile_banner_margin"
    app:cardCornerRadius="@dimen/smile_banner_corner_radius"
    app:cardElevation="@dimen/smile_banner_elevation"
    app:cardBackgroundColor="@color/smile_banner_info">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bannerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/smile_banner_padding"
        android:paddingRight="@dimen/smile_banner_padding"
        android:paddingBottom="@dimen/smile_banner_padding">

        <!-- Top spacer for status bar area -->
        <Space
            android:id="@+id/bannerTopSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Left View Container (for custom views or images) -->
        <FrameLayout
            android:id="@+id/bannerLeftContainer"
            android:layout_width="@dimen/smile_banner_icon_size"
            android:layout_height="@dimen/smile_banner_icon_size"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bannerContentArea"
            tools:visibility="visible">

            <!-- Default icon (will be used if no custom view/image is set) -->
            <ImageView
                android:id="@+id/bannerIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:src="@drawable/smile_banner_icon_info"
                android:contentDescription="@string/smile_banner_info_default"
                app:tint="@color/smile_banner_text" />
        </FrameLayout>

        <!-- Content area (title + message) -->
        <LinearLayout
            android:id="@+id/bannerContentArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smile_banner_padding"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/smile_banner_padding_small"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/bannerDragIndicator"
            app:layout_constraintEnd_toStartOf="@id/bannerRightContainer"
            app:layout_constraintStart_toEndOf="@id/bannerLeftContainer"
            app:layout_constraintTop_toBottomOf="@id/bannerTopSpacer"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_goneMarginBottom="0dp">

            <TextView
                android:id="@+id/bannerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/smile_banner_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Hi, i'am in app notification! ðŸ˜"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/bannerMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/smile_banner_info_default"
                android:textColor="@color/smile_banner_text"
                android:textSize="@dimen/smile_banner_text_size"
                tools:text="Use me in your app, that's fun!" />
        </LinearLayout>

        <!-- Right View Container (for custom views or images) -->
        <FrameLayout
            android:id="@+id/bannerRightContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/smile_banner_padding_small"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bannerContentArea"
            tools:visibility="visible" />

        <!-- Drag indicator (positioned between content and expandable area) -->
        <View
            android:id="@+id/bannerDragIndicator"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.5"
            android:background="@color/smile_banner_text"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerContentArea"
            tools:visibility="visible" />

        <!-- Expandable area container (dynamically sized during drag, starts at height 0) -->
        <FrameLayout
            android:id="@+id/bannerExpandableArea"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerDragIndicator"
            tools:visibility="visible">

            <!-- Expandable content (input + button) -->
            <LinearLayout
                android:id="@+id/bannerExpandableContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="top"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/bannerExpandableInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Type a reply..."
                    android:inputType="text"
                    android:imeOptions="actionSend"
                    android:maxLines="3"
                    android:minHeight="48dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:textColor="@color/smile_banner_text"
                    android:textColorHint="@color/smile_banner_text"
                    android:backgroundTint="@color/smile_banner_text" />

                <Button
                    android:id="@+id/bannerExpandableButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />
            </LinearLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
